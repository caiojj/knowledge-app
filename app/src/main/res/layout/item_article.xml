<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FAFAFA"
        android:layout_marginVertical="2dp"
        android:padding="1dp"
        app:cardElevation="5dp"
        android:translationZ="6dp"
        app:cardCornerRadius="8dp"
        android:layout_marginHorizontal="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_banner"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_android_10_foreground" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title_article"
                    tools:text="Artigo teste"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="2dp"
                    android:textSize="24dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/description_article"
                    android:justificationMode="inter_word"
                    tools:text="Descrição para ver como as coisas vão acontecer, eu vou escrevendo até que a frase entre em colapso ou ate que eu me canse de digitar."
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="2dp"
                    android:textSize="15dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>